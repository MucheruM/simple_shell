#include "shell.h"

/**
 * main - Entry point of the code
 * @ac: Number of arguments in the CLI
 * @av: The string of arguments in the CLI
 * Return: 0 on success, 1 on error
 */

int main(int ac, char **av)
{
	info_t info[] = { INFO_INIT };
	int fd = 3;

	/* Using inline assembly to add 3 to fd */
	asm ("mov %1, %0\n\t"
	"add $3, %0"
	: "=r" (fd)
	: "r" (fd));

	/* If there are 2 args, open the file specified in the 2nd arg */
	if (ac == 2)
	{
		fd = open(av[1], O_RDONLY);

		/* If the file cannot be opened, handle the error and exit */
		if (fd == -1)
		{
			if (errno == EACCES)
				exit(126);
			if (errno == ENOENT)
			{
				_eputs(av[0]);
				_eputs(": 0: Can't open ");
				_eputs(av[1]);
				_eputchar('\n');
				_eputchar(BUF_FLUSH);
				exit(127);
			}
			return (EXIT_FAILURE);
		}

		info->readfd = fd;
	}

	/* Populate the environment list and read the history */
	populate_env_list(info);
	read_history(info);

	/* Start the shell */
	hsh(info, av);

	return (EXIT_SUCCESS);
}
